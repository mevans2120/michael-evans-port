# Sanity Configuration (Next.js uses NEXT_PUBLIC_ prefix)
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Migration token (server-side only)
SANITY_AUTH_TOKEN=your-auth-token

# Sanity Webhook Secret (for chatbot auto-sync)
SANITY_WEBHOOK_SECRET=your-webhook-secret-here

# AI Chatbot Configuration
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-api-key

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Admin Dashboard Password
NEXT_PUBLIC_ADMIN_PASSWORD=your-secure-password-here

# Content Ingestion Feature Flags
# Set to 'true' to include Sanity CMS content in vector database
# Set to 'false' to only ingest transcript files (recommended for now to avoid test content)
INGEST_SANITY_CONTENT=false